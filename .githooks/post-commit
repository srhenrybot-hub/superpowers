#!/usr/bin/env bash
# Pathfinder: Auto-update state.json after every commit
[ -f .pathfinder/state.json ] || exit 0

# Find scripts dir relative to repo root
REPO_ROOT=$(git rev-parse --show-toplevel 2>/dev/null || pwd)
UPDATE_SCRIPT="${REPO_ROOT}/scripts/pathfinder-update-state.sh"

if [ -f "$UPDATE_SCRIPT" ]; then
  bash "$UPDATE_SCRIPT" 2>/dev/null || true
fi
